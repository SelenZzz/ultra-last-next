{
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "./dist",
    "./node_modules",
    "./rollup.config.js",
    "./babel.config.js"
  ],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  }
}
